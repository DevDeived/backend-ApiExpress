generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id          Int           @id @default(autoincrement())
  nome        String        @db.VarChar(255)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now())
}

model promocao {
  id          Int           @id @default(autoincrement())
  nome        String        @db.VarChar(255)
  inicio      DateTime      @default(now())
  termino     DateTime      
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now())
}